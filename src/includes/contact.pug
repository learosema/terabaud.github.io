form.contact-form(action="https://formspree.io/terabaud@gmail.com", method="POST")
  .contact-form__field
    label.contact-form__label(for="name") Name
    input.contact-form__input(name="name", required)
  .contact-form__field
    label.contact-form__label(for="_replyto") E-Mail
    input.contact-form__input(name="_replyto", required)
