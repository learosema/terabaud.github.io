{
  "name": "terabaud.github.io",
  "homepage": "https://terabaud.github.io/",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:html": "pug src/index.pug -o public",
    "watch:html": "pug src/index.pug -o public -w",
    "lint:js": "tslint src/*.ts",
    "build:js": "tsc -t ES5 --outFile public/bundle.js src/lea.ts",
    "watch:js": "tsc -w -t ES5 --outFile public/bundle.js src/lea.ts",
    "build:css": "postcss src/css/index.css -o public/compiled.css -m",
    "watch:css": "postcss src/css/index.css -o public/compiled.css -w -m",
    "server": "node server",
    "start": "npm-run-all -p -l watch:css watch:js watch:html server",
    "lint": "npm run lint:js -s",
    "prebuild": "npm run lint -s",
    "build": "npm-run-all -s -l build:css build:js build:html",
    "predeploy": "npm run build -s",
    "deploy": "gh-pages -d public -b master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terabaud/terabaud.github.io.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terabaud/terabaud.github.io/issues"
  },
  "devDependencies": {
    "express": "^4.17.1",
    "gh-pages": "^2.1.1",
    "jstransformer-markdown-it": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
