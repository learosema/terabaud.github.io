  "bugs": {
    "url": "https://github.com/terabaud/terabaud.github.io/issues"
  },
  "devDependencies": {
    "gh-pages": "^1.2.0",
    "http-server": "^0.11.1",
    "jstransformer-markdown-it": "^2.1.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1",
    "postcss-import": "^11.1.0",
    "postcss-preset-env": "^5.2.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "typescript": "^2.9.2"
  }
}
